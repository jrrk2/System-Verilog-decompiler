rm -rf obj_dir results
mkdir obj_dir
for i in $*;
    do echo === $i ===;
    verilator --quiet --json-only -Wno-widthexpand -Wno-widthtrunc -Wno-ascrange -Wno-widthconcat --timing +define+INCLUDE_BITWISE +define+INCLUDE_SHIFT +define+INCLUDE_POW $i;
    done
rm -f obj_dir/V*.meta.json
./json_verilog
for i in results/*;
    do echo === $i ===;
    synlig -p "read_systemverilog $i";
    done
    